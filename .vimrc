call pathogen#infect()

filetype plugin indent on
syntax on

colorscheme molokai 

set nocompatible
set nowrap
set tabstop=4
set autoindent
set number
set shiftwidth=4
set smarttab
set tw=80
set wrap
set hidden
set title
set visualbell
set noerrorbells
set nobackup
set noswapfile

set guifont=Monaco:h12

" hide titlebar
set guioptions-=T
